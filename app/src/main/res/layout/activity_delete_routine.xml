<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="300dp" >

    <!--타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="Routine Delete"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/marigold_yellow" />

    </LinearLayout>

    <!-- 내용 -->
    <LinearLayout
        android:background="@color/white"
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/routine_delete_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="을(를) 삭제하시겠습니까?"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center" />

    </LinearLayout>

    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 버튼 -->

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/routine_delete_cancle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:text="cancle"
            android:textSize="15sp"
            android:padding="16dp"
            android:gravity="center"
            android:background="@color/pale_yellow" />

        <Button
            android:id="@+id/routine_delete_delete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:text="DELETE"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:padding="16dp"
            android:gravity="center"
            android:background="@color/pale_yellow" />

    </LinearLayout>


</LinearLayout>