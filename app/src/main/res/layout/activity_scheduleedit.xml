<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="12"
    android:background="@drawable/stroke_popup">

    <LinearLayout
        android:id="@+id/btn_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_weight="0.8">

        <Button
            android:id="@+id/btn_put"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font"
            android:background="#00000000"
            android:gravity="left"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="EDIT"
            android:textColor="#000000"
            android:textSize="15sp"
            android:typeface="monospace"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="right"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:fontFamily="@font/font"
            android:paddingRight="10dp"
            android:text="DELETE"
            android:textColor="#FF0606"
            android:textSize="15sp"
            android:typeface="monospace"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11.2"
        android:orientation="horizontal"
        android:weightSum="24">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="22"
            android:orientation="vertical"
            android:weightSum="11">

            <EditText
                android:id="@+id/schedule_edit_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="@font/font"
                android:ems="10"
                android:hint="Event Name"
                android:inputType="textPersonName"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/colors"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                <Button
                    android:id="@+id/color1"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@color/red6"/>

                <Button
                    android:id="@+id/color2"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/orange4"/>

                <Button
                    android:id="@+id/color3"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/yellow1"/>

                <Button
                    android:id="@+id/color4"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/green3"/>

                <Button
                    android:id="@+id/color5"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/blue3"/>

                <Button
                    android:id="@+id/color6"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/violet3" />
            </LinearLayout>

            <TextView
                android:id="@+id/timeset"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:fontFamily="@font/font"
                android:textColor="#000000"
                android:text="Time Setting" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#000000"/>

            <LinearLayout
                android:id="@+id/time_starts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/font"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Starts"/>

                <TextView
                    android:id="@+id/event_edit_start_day"
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="48dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:background="@drawable/round_border_yellow_box"
                    android:text="2022.05.03"
                    android:fontFamily="@font/font"
                    android:textSize="13sp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/event_edit_start_time"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="7dp"
                    android:padding="10dp"
                    android:fontFamily="@font/font"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:background="@drawable/round_border_yellow_box"
                    android:text="04:00PM"
                    android:textSize="13sp"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_ends"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/font"
                    android:textSize="20sp"
                    android:text="Ends"/>

                <TextView
                    android:id="@+id/event_edit_end_day"
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="48dp"
                    android:padding="10dp"
                    android:fontFamily="@font/font"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:background="@drawable/round_border_yellow_box"
                    android:text="2022.05.03"
                    android:textSize="13sp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/event_edit_end_time"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="7dp"
                    android:padding="10dp"
                    android:fontFamily="@font/font"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:background="@drawable/round_border_yellow_box"
                    android:text="05:00PM"
                    android:textSize="13sp"
                    android:clickable="true" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:fontFamily="@font/font"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text=" At Where?" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:fontFamily="@font/font"
                    android:ems="10"
                    android:background="@null"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:hint="Location" />

                <Button
                    android:id="@+id/btn_search_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:layout_margin="3dp"
                    android:background="@color/pale_yellow"
                    android:text="장소찾기"
                    android:fontFamily="@font/font"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#000000"/>

            <EditText
                android:id="@+id/edit_context"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:fontFamily="@font/font"
                android:ems="10"
                android:background="@null"
                android:inputType="textPersonName"
                android:paddingTop="3dp"
                android:paddingLeft="3dp"
                android:gravity="left"
                android:textSize="20sp"
                android:hint="Context" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>