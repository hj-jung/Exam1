<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="12"
    android:background="@drawable/stroke_popup">

    <LinearLayout
        android:id="@+id/btn_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_weight="0.8">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="left"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="Cancel"
            android:textColor="#FF0606"
            android:textSize="16dp"
            android:typeface="monospace"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="right"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingRight="10dp"

            android:text="Add"
            android:textColor="#000000"
            android:textSize="16dp"
            android:typeface="monospace"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11.2"
        android:orientation="horizontal"
        android:weightSum="24">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="22"
            android:orientation="vertical"
            android:weightSum="11">

            <EditText
                android:id="@+id/schedule_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="Event Name"
                android:inputType="textPersonName"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/colors"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="#FF0606"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="#F0CA00"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="#66CC00"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="#0038FF"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="#E200CC"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:background="#000000" />
            </LinearLayout>

            <TextView
                android:id="@+id/timeset"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:textSize="17dp"
                android:textColor="#000000"
                android:text="Time Setting" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#000000"/>

            <LinearLayout
                android:id="@+id/time_starts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="28dp"
                    android:text="Starts"/>

                <android.widget.Button
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="48dp"
                    android:backgroundTint="#FFFACD"
                    android:background="@drawable/round_stroke"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="5dp"
                    android:textSize="12dp"
                    android:textColor="#454545"
                    android:text="Apr 18, 2022" />

                <TextView
                    android:id="@+id/event_start_time"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="7dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:background="@drawable/round_border_yellow_box"
                    android:text="04:00PM"
                    android:textSize="12sp"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_ends"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="28dp"
                    android:text="Ends"/>

                <android.widget.Button
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="48dp"
                    android:backgroundTint="#FFFACD"
                    android:background="@drawable/round_stroke"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="5dp"
                    android:textColor="#454545"
                    android:textSize="12dp"
                    android:text="Apr 18, 2022" />

                <TextView
                    android:id="@+id/event_end_time"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="7dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:background="@drawable/round_border_yellow_box"
                    android:text="05:00PM"
                    android:textSize="12sp"
                    android:clickable="true" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/locationset"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:textSize="17dp"
                android:textColor="#000000"
                android:text=" At Where?" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#000000"/>

            <EditText
                android:id="@+id/locationname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:ems="10"
                android:background="@null"
                android:inputType="textPersonName"
                android:textSize="28dp"
                android:hint="Location" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#000000"/>

            <EditText
                android:id="@+id/context"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:ems="10"
                android:background="@null"
                android:inputType="textPersonName"
                android:paddingTop="3dp"
                android:paddingLeft="3dp"
                android:gravity="left"
                android:textSize="28dp"
                android:hint="Context" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
