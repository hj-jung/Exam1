<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Exam" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Title bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--팝업창 테마-->
    <style name="DialogTheme.Exam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dialogColor</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--구분선-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <!--타임피커 커스텀-->
    <style name="CustomTimePicker">
        <item name="android:textColorPrimary">@color/black</item><!-- text color -->
        <item name="colorControlNormal">@color/black</item><!-- divider color -->
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/marigold_yellow</item>
        <!-- dialog의 배경 변경 -->
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/marigold_yellow</item>
        <item name="colorControlHighlight">@color/marigold_yellow</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/marigold_yellow</item>
    </style>
</resources>